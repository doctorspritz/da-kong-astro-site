---
/**
 * * Hero with background image
 * You'll want a mobile image, and a desktop image for this.
 */
import { Icon } from "astro-icon/components";
import { Image } from "astro:assets";

// components
import Button from "@components/Button/Button.astro";

// images
import heroImage from "@assets/images/happy-family-crop2.png";
import heroImageMobile from "@assets/images/happy-family-crop-mobile2.png";

interface Props {
  heading?: string;
  subheading?: string;
  ctaPrimaryText?: string;
  ctaPrimaryHref?: string;
  ctaSecondaryText?: string;
  ctaSecondaryHref?: string;
}

const {
  heading = "Private-Label Manufacturing for Educational & Toy Brands.",
  subheading = "Transform your educational and toy brand ideas into reality with our comprehensive private-label manufacturing services. From concept to completion, we deliver high-quality products that meet your exact specifications.",
  ctaPrimaryText = "Get a quote",
  ctaPrimaryHref = "/contact",
  ctaSecondaryText,
  ctaSecondaryHref,
} = Astro.props as Props;

---

<section id="hero" class="relative mb-14 flex min-h-[60svh] w-full md:pb-22">
	<!-- background image -->
	<div class="absolute -z-20 h-full w-full overflow-hidden bg-white opacity-60">
		<Image
			src={heroImage}
			class="hidden h-full w-auto object-cover sm:block"
			alt="smiling family"
			aria-hidden="true"
			loading="eager"
			height={2000}
		/>
		<Image
			src={heroImageMobile}
			class="h-full w-auto object-cover sm:hidden"
			alt="smiling family"
			aria-hidden="true"
			loading="eager"
			width={1200}
		/>
	</div>

	<!-- another gradient filter so text has even light bg -->
	<div
		class="absolute -z-10 h-full w-full bg-gradient-to-r from-white/90 via-white/50 to-white/50 md:to-transparent"
	>
	</div>

	<!-- hero items -->
	<div class="site-container w-full gap-10 pt-36 pb-24 md:pt-44 md:pb-36">
		<!-- Hero text -->
		<div class="mx-auto max-w-[800px] text-center">
            <h1
                class="text-4xl leading-tight font-medium sm:text-5xl md:leading-tight"
                data-aos="fade-up"
            >
                {heading}
            </h1>
            <p class="description mt-6" data-aos="fade-up" data-aos-delay=".2">
                {subheading}
            </p>
            <div class="mt-6 flex flex-wrap justify-center gap-4">
                <Button
                    variant="primary"
                    href={ctaPrimaryHref}
                    data-aos="fade-up"
                    data-aos-delay=".9"
                >
                    {ctaPrimaryText}
                </Button>
                {ctaSecondaryText && ctaSecondaryHref && (
                  <Button
                      variant="outline"
                      href={ctaSecondaryHref}
                      target="_blank"
                      class=""
                      rel="noopener noreferrer"
                      data-aos="fade-up"
                      data-aos-delay="1.1"
                  >
                      {ctaSecondaryText}
                  </Button>
                )}
            </div>
        </div>
    </div>
</section>
