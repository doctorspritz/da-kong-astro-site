---
/**
 * * Testimonials section columns (not swiper)
 */

import { Icon } from "astro-icon/components";

// components
import TestimonialCard from "./TestimonialCard.astro";

// expects items passed via props or default empty

interface TestimonialItem {
  avatar?: ImageMetadata;
  name: string;
  title?: string;
  testimonial: string;
}

interface Props { items?: TestimonialItem[] }
const { items = [] } = Astro.props as Props;
---

<section id="faq2" class="bg-base-200/50 py-20 md:my-16">
	<div class="site-container">
		<div class="flex justify-center">
			<h2 class="h2 flex gap-1 text-center">
				<span>Our customers love</span>
				<span>
					<Icon
						name="stellar/freehand-heart"
						class="text-primary-500 h-8 w-auto"
						aria-hidden="true"
					/>
				</span>
				<span>us</span>
			</h2>
		</div>
		<div class="mx-auto mt-20 grid gap-6 gap-y-20 sm:grid-cols-2 md:grid-cols-3">
			{items.map((testimonial) => <TestimonialCard {...testimonial} />)}
		</div>
	</div>
</section>
