---
/**
 * * Testimonials section swiper
 */

import { Icon } from "astro-icon/components";

// swiper style imports
import "swiper/css";
import "swiper/css/pagination";
import "./testimonialSwiper.css"; // have to define custom styles like this

// components
import TestimonialCard from "./TestimonialCard.astro";


interface TestimonialItem {
  avatar?: ImageMetadata;
  name: string;
  title?: string;
  testimonial: string;
}

interface Props { title?: string; items?: TestimonialItem[] }
const { title = "Our customers love us", items } = Astro.props as Props;
const testimonialData: TestimonialItem[] = items && items.length ? items : [];
---

<section id="faq2" class="bg-base-200/50 py-20 md:my-16">
	<div class="site-container">
    <div class="flex justify-center">
        <h2 class="h2 flex gap-1 text-center">{title}</h2>
    </div>

		<div class="mt-10 overflow-hidden pb-10">
			<!-- swiper -->
			<div class="testimonials__swiper relative mt-10">
				<!-- Additional required wrapper -->
				<div class="swiper-wrapper">
					<!-- Slides -->
					{
						testimonialData.map((testimonial, idx) => (
							<div class="swiper-slide">
                        <TestimonialCard avatar={testimonial.avatar} name={testimonial.name} title={testimonial.title || ""} testimonial={testimonial.testimonial} />
							</div>
						))
					}
				</div>
				<!-- If we need pagination -->
				<div class="swiper-pagination"></div>
			</div>
		</div>
	</div>
</section>

<script>
	// Import Swiper and modules
	import Swiper from "swiper";
	import type { SwiperOptions } from "swiper/types";
	import { Pagination } from "swiper/modules";
	// import { Navigation, Pagination, Scrollbar } from "swiper/modules";

	function swiperSetup() {
		const SwiperParams: SwiperOptions = {
			// Install modules
			modules: [Pagination],

			// Optional parameters
			direction: "horizontal",
			spaceBetween: 10,
			initialSlide: 1,
			grabCursor: true,
			centeredSlides: true,

			breakpoints: {
				// when window width is >= 768px
				768: {
					slidesPerView: 2,
					spaceBetween: 20,
				},
				// when window width is >= 1024px
				1024: {
					slidesPerView: 3,
					spaceBetween: 40,
				},
			},

			// If we need pagination
			pagination: {
				el: ".swiper-pagination",
				clickable: true,
			},
		};

		// Now you can use Swiper
		const swiper = new Swiper(".testimonials__swiper", SwiperParams);
	}

	// runs on initial page load
	swiperSetup();

	// runs on view transitions navigation
	document.addEventListener("astro:after-swap", swiperSetup);
</script>
